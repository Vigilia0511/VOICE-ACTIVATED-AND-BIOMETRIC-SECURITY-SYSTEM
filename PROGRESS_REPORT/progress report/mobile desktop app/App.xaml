<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="testdatabase.App">

    <Application.Resources>
        <!-- Colors -->
        <Color x:Key="UsernameTextColorLight">Black</Color>
        <Color x:Key="UsernameTextColorDark">White</Color>

        <!-- Styles -->
        <Style x:Key="UsernameLabelStyle" TargetType="Label">
            <Setter Property="TextColor" Value="{DynamicResource UsernameTextColorLight}" />
        </Style>
    </Application.Resources>

</Application>
